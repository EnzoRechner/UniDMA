rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read their own account info
    match /rebooking-accounts/{userId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.firebaseUid;
      // Note: Write access should be more specific, e.g., only on creation or by the user themselves.
    }

    // Allow users to read and create their own bookings
    match /nagbookings/{bookingId} {
      allow read: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/rebooking-accounts/$(resource.data.userId)).data.firebaseUid;
      allow create: if request.auth != null;
      // Allow staff/admins to update status
      allow update: if request.auth != null; // TODO: Add role-based check here later
    }

    // Allow any authenticated user to read branch information
    match /Branch/{branchId} {
        allow read: if request.auth != null;
        // TEMPORARY: allow only specific settings fields to be updated by authenticated users.
        // This should be tightened later with role-based checks via custom claims or a uid-keyed user profile doc.
        allow update: if request.auth != null
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['pauseBookings', 'pauseReason', 'pauseUntil']);
    }
  }
}